{
    "workbench.colorTheme": "Monokai Dimmed",
    "window.zoomLevel": 1,

    
    // change selection color
    "workbench.colorCustomizations": {
        //editor
        "editor.lineHighlightBackground": "#0c0431",
        "editor.wordHighlightBackground": "#c22bd6",
        "editorCursor.foreground": "#5f5f17",        
        "editor.selectionBackground": "#3843dbd5", // red color hexadecimal code
        "editor.selectionHighlightBackground": "#6b2b63", // white hex code

        //scrollbar
        "scrollbar.shadow": "#bf26da",
        "scrollbarSlider.activeBackground": "#b93a1a",
        "scrollbarSlider.background": "#e4eb84",
        "scrollbarSlider.hoverBackground": "#17a6b3",        
    },
    "extensions.ignoreRecommendations": true,
    "editor.renderLineHighlight": "gutter",
    "explorer.confirmDragAndDrop": false,
    "python.defaultInterpreterPath": "d:\\anaconda3\\python.exe",
    "python.languageServer": "Pylance",
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "[python]": {
        "editor.formatOnType": true
    },
    
}
